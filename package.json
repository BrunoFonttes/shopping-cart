{
  "name": "shopping-cart-challenge",
  "version": "1.0.0",
  "description": "An api to manage a shopping cart by adding and removing items from a user's cart.",
  "main": "index.js",
  "scripts": {
    "prepare": "[ -e .husky ] && rm -r .husky && npx husky install && chmod +x ./husky-preset.sh && ./husky-preset.sh",
    "commit": "npx cz",
    "lint": "npx eslint .",
    "dev": "npx nodemon -w src --exec \"ts-node src/index.ts\" -e \"ts\"",
    "test:watch": "npx jest --watch",
    "test:staged": "npx jest --bail --passWithNoTests --findRelatedTests ",
    "test:coverage": "npx jest --coverage",
    "test": "npx jest"
  },
  "author": "Bruno Fontes",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.7.0",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/morgan": "^1.9.4",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "express": "^4.18.2",
    "json-schema": "^0.4.0",
    "morgan": "^1.10.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run test:staged",
      "eslint"
    ]
  }
}
